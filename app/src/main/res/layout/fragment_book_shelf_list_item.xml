<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bookShelfListItemDelete"
        android:layout_gravity="end"
        android:background="@android:color/holo_red_light"
        android:textSize="25sp"
        android:text="@string/delete"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/bookShelfItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/img"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_new"
            android:gravity="center"
            android:rotation="45"
            android:text="@string/book_new"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="5sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@id/img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/app_name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/newChapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/app_name"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/newTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/app_name"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp" />
        </LinearLayout>

    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>